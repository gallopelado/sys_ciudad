<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 ">
                    <div class="overview-wrap">
                        <h2 class="title-1">Total Pacientes atendidos</h2>
                    </div>
                    <div class="row form-group">
                        <div class="col-2">
                            <h4 >Departamento:</h4>
                        </div>
                        <div class="col-2">
                            <select class="browser-default custom-select form-control" id="departamntoId">
                            
                                <% if(data.length !== 0) { %>
                                    <option selected>Todos</option>
                                    <% data.forEach(valor => { %>
                                        <option value="<%= valor.codigo_departamento %>"><%= valor.nombre_departamento %></option>
                                    <% }) %>
                                <% } else { %>
                                    <option value="T" selected>Todos</option>
                                <% } %>
                            </select>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-2">
                            <h4 >Establecimiento:</h4>
                        </div>
                        <div class="col-2">
                            <select class="browser-default custom-select form-control" id="establecimientoId">
                                    <option value="T" selected>Todos</option>
                            </select>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-1">
                            <h4 >Desde:</h4>
                        </div>
                        <div class="col-3">
                            <input id="datepicker_desde" class="datepicker form-control" />
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-1">
                            <h4 >Hasta:</h4>
                        </div>
                        <div class="col-3">
                            <input id="datepicker_hasta" class="datepicker form-control" />
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-2">
                            <button type="button" class="btn btn-dark" id="btnBuscar">Buscar</button>
                        </div>
                        <script>        
                               $('#datepicker_desde').datepicker({
                                    uiLibrary: 'bootstrap4'
                                });
                                $('#datepicker_hasta').datepicker({
                                    uiLibrary: 'bootstrap4'
                                });                           
                        </script>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive table--no-card m-b-30">
                        <table class="table table-borderless table-striped table-earning" id="tbl">
                            <thead>
                                <tr>
                                    <th>Código establecimiento</th>
                                    <th>Departamento</th>
                                    <th>Establecimiento</th>
                                    <th>total</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody id="tBody">                               
                              
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END MAIN CONTENT-->
<!-- END PAGE CONTAINER-->
</div>

</div>
